.top{
  position: absolute;
  width:100%;
  top:10rpx;
  display: flex;
  flex-flow:wrap;
  z-index: 10;
  color:white;
  justify-content:space-around;
}
.hint{
  position: absolute;
  top:10rpx;
  width:100%;
  font-size: 33rpx;
  text-align: center;
  color:white;
  z-index: 10;
}
page{
  background:rgb(14, 13, 13);
}
view{
  font-size: 30rpx;
}
.bottom{
  position: absolute;
  width:100%;
  bottom:0;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
  flex-wrap:wrap;
  height: 210rpx;
  padding-bottom: 36rpx;
  background-color: #000;
}
button{
  font-size:28rpx;
  z-index:2;
  display: inline-block;
  line-height: 60rpx;
}
.input{
  display: flex;
  height: 50rpx;
  width:50%;
}
.input>.label{
  min-width:150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.input>input{
  margin-left:10rpx;
  text-align: center;
  max-width:160rpx;
  border:1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}

.bottom-views{
  width: 100%;
  text-align: center;
}

.bottom-views view{
  display: inline-block;
  border-bottom: 2rpx solid #dfdfdf;
  padding:0 20rpx;
  line-height:60rpx;
  background-color: #fff;
  border-radius: 62rpx 0 0 62rpx;
}

.bottom-views view+view{
  border-radius: 0 62rpx 62rpx 0;
}

.bottom-views view.select-view{
  background-color: #aaa;
}

.bottom-btns{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}