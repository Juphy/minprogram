/* pages/common/description/description.wxss */
.desc-container {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  padding: 20rpx;
  box-sizing: border-box;
}

.desc-container button {
  margin-top: 24rpx;
  padding: 0;
  border-radius: 46rpx;
  border-radius: 46rpx;
  box-sizing: border-box;
}

.desc-container editor {
  min-height: 240rpx;
  height: auto;
  width: 100%;
  background-color: #fff;
  padding: 24rpx;
  box-sizing: border-box;
}

.one-textarea {
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  min-height: 300rpx;
  height: auto;
  display: inline-block;
}

.border-radius {
  border-radius: 6rpx;
}

.counter-text {
  padding-right: 24rpx;
  padding-bottom: 24rpx;
  background-color: #fff;
}
