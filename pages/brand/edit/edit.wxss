.my-button {
  display: inline-block;
	position: relative;
	margin: 80rpx 20rpx;
	padding: 20rpx 40rpx;
	text-align: center;
	text-decoration: none;
  font: bold 28rpx/36rpx Arial, sans-serif;
  border-radius: 60rpx;
  width: 80%;
  color: #fff;
  background-color: #f66;
}

.brand-img {
  border-radius: 60rpx;
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  font-size: 0;
  background-color: rgb(170, 170, 170);
}

.form-card {
  margin-top: 1px;
  padding: 8px 16px;
  background-color: #fff;
}
