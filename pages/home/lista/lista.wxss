.lista-container {
  background-color: #fff;
  margin-bottom: 24rpx;
}

image {
  width: 100%;
  vertical-align: top;
}

.lista-text {
  padding: 0 32rpx;
}

.lista-label,
.lista-content,
.lista-num {
  display: inline-block;
  line-height: 64rpx;
  font-size: 36rpx;
  vertical-align: top;
}

.lista-content {
  max-width: 360rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow-x: hidden;
}

.lista-num {
  margin-left: 6rpx;
  color: #999;
}

.lista-mode {
  padding: 0 32rpx;
  color: #999;
}

.lista-img {
  position: relative;
}

.lista-shop {
  position: absolute;
  right: 0;
  top: 24rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  border-top-left-radius: 56px;
  border-bottom-left-radius: 56px;
}

.lista-shop span + span {
  margin-left: 24rpx;
}
