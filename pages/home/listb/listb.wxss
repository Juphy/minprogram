.listb-container {
  background-color: #fff;
  margin-bottom: 24rpx;
  padding: 24rpx;
  display: flex;
}

.listb-img {
  flex: 1;
}

.listb-img image {
  height: 176rpx;
}

.listb-text {
  width: 100%;
  line-height: 32rpx;
}

.listb-label,
.listb-content,
.listb-num {
  display: inline-block;
  line-height: 64rpx;
  font-size: 32rpx;
  vertical-align: top;
}

.listb-content {
  max-width: 180rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow-x: hidden;
}

.listb-right {
  padding-left: 48rpx;
  flex: 2;
  line-height: 64rpx;
  font-size: 32rpx;
}

.listb-shop {
  background-color: #f0f0f0;
  color: #333;
  display: inline-block;
  padding: 0 16rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  line-height: 52rpx;
}

.listb-shop span + span {
  margin-left: 24rpx;
}

.listb-mode {
  color: #999;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-top: 12rpx;
}
